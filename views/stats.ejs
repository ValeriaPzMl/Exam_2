<%- include('partials/header') %>
<!--ejemplo harcodeado -->
<div class="gen2 container">

    <div class="carrd card mb-5">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="https://cdn.jsdelivr.net/gh/akabab/superhero-api@0.3.0/api/images/lg/1-a-bomb.jpg" class="img-fluid" alt="A-Bomb">
        </div>
        <div class="col-md-8">
          <div class="datos card-body">

            <h1 class="name card-title">A-Bomb <h2>(ID: 1)</h2></h1>
            <p><strong>Full Name:</strong> Richard Milhouse Jones</p>
            <p><strong>Place of Birth:</strong> Scarsdale, Arizona</p>
            <p><strong>Gender:</strong> Male</p>
            <p><strong>Race:</strong> Human</p>
            <p><strong>Height:</strong> 6'8" (203 cm)</p>
            <p><strong>Weight:</strong> 980 lb (441 kg)</p>
            <p><strong>Eye Color:</strong> Yellow</p>
            <p><strong>Hair Color:</strong> No Hair</p>
            <p><strong>Aliases:</strong> Rick Jones</p>
            <p><strong>Group Affiliation:</strong> Hulk Family; Excelsior (sponsor), Avengers (honorary member)</p>
            <p><strong>Biography:</strong> Musician, adventurer, author; formerly talk show host.</p>
          </div>
        </div>

            <div class="powerstats-container col-md-12">
              <h3>Powerstats</h3>
              <div class="progress mb-2">
                <div class="progress-bar bg-info" role="progressbar" style="width: 38%;" aria-valuenow="38" aria-valuemin="0" aria-valuemax="100">Intelligence: 38%</div>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-danger" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Strength: 100%</div>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-warning" role="progressbar" style="width: 17%;" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100">Speed: 17%</div>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">Durability: 80%</div>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 24%;" aria-valuenow="24" aria-valuemin="0" aria-valuemax="100">Power: 24%</div>
              </div>
              <div class="progress mb-2">
                <div class="progress-bar bg-secondary" role="progressbar" style="width: 64%;" aria-valuenow="64" aria-valuemin="0" aria-valuemax="100">Combat: 64%</div>
              </div>
            </div> 
          
      </div>
    </div>
  </div>

