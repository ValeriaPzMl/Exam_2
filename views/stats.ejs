<%- include('partials/header') %>

<!--tarjeta recibiendo superheroe-->
<div class="gen2 container">
  <div class="carrd card mb-5">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= superhero.images.md %>" class="card-img-top"  style="height: 90%;width: 85%;"  alt="<%= superhero.name %>">
      </div>
      <div class="col-md-8">
        <div class="datos card-body">
          <h1 class="name card-title">
            <%= superhero.name || 'unknown' %> <span>(ID: <%= superhero.id || 'Unknown' %>)</span>
          </h1>
          <p><strong>Full Name:</strong> <%= superhero.biography.fullName || 'Unknown' %></p>
          <p><strong>Place of Birth:</strong> <%= superhero.biography.placeOfBirth || 'Unknown' %></p>
          <p><strong>Gender:</strong> <%= superhero.appearance.gender || 'Unknown' %></p>
          <p><strong>Race:</strong> <%= superhero.appearance.race || 'Unknown' %></p>
          <p><strong>Height:</strong> <%= (superhero.appearance.height[0] || 'Unknown') + ' (' + (superhero.appearance.height[1] || 'Unknown') + ')' %></p>
          <p><strong>Weight:</strong> <%= (superhero.appearance.weight[0] || 'Unknown') + ' (' + (superhero.appearance.weight[1] || 'Unknown') + ')' %></p>
          <p><strong>Eye Color:</strong> <%= superhero.appearance.eyeColor || 'Unknown' %></p>
          <p><strong>Hair Color:</strong> <%= superhero.appearance.hairColor || 'Unknown' %></p>
          <p><strong>Aliases:</strong> <%= superhero.biography.aliases.length > 0 ? superhero.biography.aliases.join(', ') : 'Unknown' %></p>
          <p><strong>Group Affiliation:</strong> <%= superhero.connections.groupAffiliation || 'Unknown' %></p>
          <p><strong>Biography:</strong> <%= superhero.work.occupation || 'Unknown' %></p>
        </div>
      </div>

      <div class="powerstats-container col-md-12">
        <h3>Powerstats</h3>
        <div class="progress mb-2">
          <div class="progress-bar bg-info" role="progressbar" style="width: <%= superhero.powerstats.intelligence %>%;" aria-valuenow="<%= superhero.powerstats.intelligence %>" aria-valuemin="0" aria-valuemax="100">
            Intelligence: <%= superhero.powerstats.intelligence %>%
          </div>
        </div>
        <div class="progress mb-2">
          <div class="progress-bar bg-danger" role="progressbar" style="width: <%= superhero.powerstats.strength %>%;" aria-valuenow="<%= superhero.powerstats.strength %>" aria-valuemin="0" aria-valuemax="100">
            Strength: <%= superhero.powerstats.strength %>%
          </div>
        </div>
        <div class="progress mb-2">
          <div class="progress-bar bg-warning" role="progressbar" style="width: <%= superhero.powerstats.speed %>%;" aria-valuenow="<%= superhero.powerstats.speed %>" aria-valuemin="0" aria-valuemax="100">
            Speed: <%= superhero.powerstats.speed %>%
          </div>
        </div>
        <div class="progress mb-2">
          <div class="progress-bar bg-success" role="progressbar" style="width: <%= superhero.powerstats.durability %>%;" aria-valuenow="<%= superhero.powerstats.durability %>" aria-valuemin="0" aria-valuemax="100">
            Durability: <%= superhero.powerstats.durability %>%
          </div>
        </div>
        <div class="progress mb-2">
          <div class="progress-bar bg-primary" role="progressbar" style="width: <%= superhero.powerstats.power %>%;" aria-valuenow="<%= superhero.powerstats.power %>" aria-valuemin="0" aria-valuemax="100">
            Power: <%= superhero.powerstats.power %>%
          </div>
        </div>
        <div class="progress mb-2">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: <%= superhero.powerstats.combat %>%;" aria-valuenow="<%= superhero.powerstats.combat %>" aria-valuemin="0" aria-valuemax="100">
            Combat: <%= superhero.powerstats.combat %>%
          </div>
        </div>
      </div>
    </div>
    
    <!-- Navegación -->
    <div class="navigation mt-4">
      <% if (previousHero) { %>
        <a href="/superhero/<%= previousHero.id %>" class="btn btn-secondary">← Anterior: </a>
      <% } %>
      <% if (nextHero) { %>
        <a href="/superhero/<%= nextHero.id %>" class="btn btn-secondary">Siguiente:→</a>
      <% } %>
    </div>
  </div>
</div>


<%- include('partials/footer') %>

